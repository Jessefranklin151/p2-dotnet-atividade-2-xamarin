<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestaoDeGastosApp.Detail">
    <ContentPage.Content>
        <StackLayout Padding="20">

            <StackLayout Margin="0, 30">
                <StackLayout Orientation="Horizontal">
                    <Label FontSize="15" TextColor="Black" Text="Nome: "/>
                    <Label FontSize="15" TextColor="Black" x:Name="lblDesc"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label FontSize="15" TextColor="Black" Text="Preço: "/>
                    <Label FontSize="15" TextColor="Black" x:Name="lblPreco"/>
                </StackLayout>
            </StackLayout>

            <StackLayout Margin="0, 30">

                <Button 
                    Text="Voltar"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="#3f51b5"
                    TextColor="White"
                    Clicked="Button_Voltar_Clicked"/>
                <Button 
                    Text="Remover"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="#f44336"
                    TextColor="White"
                    Clicked="Button_Remover_Clicked"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>